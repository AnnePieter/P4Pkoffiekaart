@{
    int punten = -1;
    var count = 2121312321;
    var sql = "";
    var img = "";
    if(IsPost)
    {
        Validation.RequireField("name","Please enter a valid name!");
        string naam = Request.Form["name"] ?? "";
        naam = naam.Replace("'", "");
        naam = naam.Replace("-","");
        naam = naam.Replace("<","");
        naam = naam.Replace(">", "");
        naam = naam.Replace("\"", "");
        var db = Database.Open("p4p");
        sql = "SELECT COUNT(*) FROM Kaarten WHERE Voornaam=@0";
        count = db.QueryValue(sql, naam);
        if(count == 1)
        {
            var row = db.QuerySingle("SELECT Punten FROM Kaarten WHERE Voornaam = @0",naam);
            punten = row.Punten;
            if(punten == 0){
                img = "img/Empty Coffee.png";
            }
            if(punten == 1){
                img = "img/One Coffee.png";
            }
            if(punten == 2){
                img = "img/Two Coffee.png";
            }
            if(punten == 3){
                img = "img/Three Coffee.png";
            }
            if(punten == 4){
                img = "img/Four Coffee.png";
            }
            if(punten == 5){
                img = "img/Five Coffee.png";
            }
            if(punten == 6){
                img = "img/Six Coffee.png";
            }
            if(punten == 7){
                img = "img/Seven Coffee.png";
            }
            if(punten == 8){
                img = "img/Eight Coffee.png";
            }
            if(punten == 9){
                img = "img/Nine Coffee.png";
            }
            if(punten == 10){
                img = "img/Ten Coffee.png";
            }
                
        }
        db.Close();
    }

}

<!DOCTYPE html>

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="stylesheet" type="text/css" href="~/css/StyleSheet.css">
        <link href="~/css/bootstrap.min.css" rel="stylesheet">
        <title>Koffiekaart Check</title>
    </head>
    <body>
        <div class="container">
            <div class="jumbotron">
                <img alt="Koffiekaart Check" src="img/banner.png"/> 
            </div>
            <div class="panel panel-default">
            <div class="panel-heading">
                @if(!IsPost || count == 0)
                {
                    <h2>Welcome!</h2>
                }
                @if(IsPost && count == 1)
                {
                    <h2>Welcome! @Request.Form["name"]</h2> 
                }
            </div>
            <div class="panel-body">
                 @if(!IsPost)
                {
                    <form method="post">
                        <div class="nameinput">
                            <div class="inputform">
                                <label for="name">Please give your full name:</label>
                                <input type="text" class="form-control" name="name">
                            </div>
                            <button type="submit" class="btn btn-info">Check</button>
                        </div>
                    </form>
                }
                @if(!Validation.IsValid() || count == 0)
                {
                    <div class="alert alert-danger">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <strong>Alert!</strong> Please enter a valid name!
                    </div>
                    <form method="post">
                        <div class="nameinput">
                            <div class="inputform">
                                <label for="name">Please give your full name:</label>
                                <input type="text" class="form-control" name="name">
                            </div>
                            <button type="submit" class="btn btn-info">Check</button>
                        </div>
                    </form>
                }
                @if(IsPost && count == 1)
                {
                    <img alt="U heeft @punten punt(en)!" src="img/banner.png"/> 
                }
            </div>
             <div class="panel-footer">Copyright  © P4P Groep 28 2016</div>
        </div>
        </div>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
        <script src="js/bootstrap.min.js"></script>
    </body>
</html>
